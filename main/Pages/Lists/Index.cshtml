@page
@model main.Pages.List.IndexModel
@{
}

<br>

<h2>Lists</h2>
<a class="btn btn-primary btn-sm" href="/Lists/Create">New List</a>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Created At</th>
            <th>Show</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model.ListLists){
            <tr>
                <td>@item.id</td>
                <td>@item.name</td>
                <td>@item.created_at</td>
                <td>
                    <a class="btn btn-primary btn-sm" href="/Lists/Show?id=@item.id">Show</a>
                </td>
                <td>
                    <a class="btn btn-danger btn-sm" href="/Lists/Delete?id=@item.id">Delete</a>
                </td>
            </tr>
        }
    </tbody>    
</table>

<h2>Export</h2>
<form method="get" action="/Lists/Export">

    <select multiple class="form-control" name="id[]">
        @foreach(var item in Model.ListLists){
            <option value="@item.id">@item.name</option>
        }
    </select>
    <input type="submit" class="btn btn-primary btn-sm">
</form>
